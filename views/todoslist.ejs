<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MongoDB BREADS (Browse, Read, Edit, Add, Delete, Sort)</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/todoslist.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <script src="/javascripts/todos.js"></script>
</head>

<body class="container-todolist ">
    <div class="header">
        <h1>Todo List</h1>
    </div>
    <div class="body">
        <div class="title-body">
            <label for="title">Title</label>
            <input type="text" placeholder="insert your title" id="searchTitle">
        </div>
        <div class="deadline-body">
            <label for="deadline">Deadline</label>
            <input type="datetime-local" id="startdateDeadline">
            <div class="sd">
                <span>s.d.</span>
            </div>
            <input type="datetime-local" id="enddateDeadline">
        </div>
        <div class="complete-body">
            <label for="complete">Complete</label>
            <select id="completeTodo">
                <option value="">-select complete-</option>
                <option value="true">Done</option>
                <option value="false">Not yet</option>
            </select>
        </div>
        <div class="body-footer">
            <div class="sort-body" id="changeSort">
                <button class="btn btn-success" onclick="sortAsc('deadline')"><i class="fa-solid fa-sort"></i> sort by
                    deadline</button>
            </div>
            <div class="body-footerBtn">
                <button class="btn btn-warning" onclick="resetData()"><i class="fa-solid fa-rotate"></i></button>
                <button class="btn btn-info" onclick="browseData()"><i class="fa fa-search"></i></button>
            </div>
        </div>
    </div>
    <div class="footer">
        <input type="text" id="title" name="title" placeholder="title">
        <button class="btn btn-primary" onclick="addData()"><i class="fa-sharp fa-solid fa-circle-down"></i></button>
    </div>
    <div>
        <div class="showTodos">

        </div>
    </div>


    <!-- CREATE MODALS add,edit,delete-->

    <div class="modal fade" id="edit" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content" id="coba">
                <div class="modal-header">
                    <h5 class="modal-title">Update Todo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="form-user">
                        <div class="row mb-3">
                            <label for="title" class="col-sm-2 col-form-label">Title</label>
                            <div class="col-sm-10">
                                <input type="title" class="form-control" id="editTitle" required>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="deadline" class="col-sm-2 col-form-label">Deadline</label>
                            <div class="col-sm-10">
                                <input type="datetime-local" class="form-control" name="deadline" id="editDeadline"
                                    required />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="complete" class="col-sm-2 col-form-label">Complete</label>
                            <div class="col-sm-10">
                                <div class="form-check my-2">
                                    <input class="form-check-input" type="checkbox" id="editComplete">
                                    <label class="form-check-label" for="editComplete">
                                        done
                                    </label>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="editData()" data-bs-dismiss="modal">Save
                        changes</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="delete" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete Confirmation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                    <button type="button" class="btn btn-primary" onclick="deleteData()"
                        data-bs-dismiss="modal">Yes</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>


</body>

</html>