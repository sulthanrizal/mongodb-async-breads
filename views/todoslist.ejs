<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MongoDB BREADS (Browse, Read, Edit, Add, Delete, Sort)</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/todoslist.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
</head>

<body class="container-todolist ">
    <div class="header">
        <h1>Todo List</h1>
    </div>
    <div class="body">
        <div class="title-body">
            <label for="title">Title</label>
            <input type="text" placeholder="insert your title" id="searchTitle">
        </div>
        <div class="deadline-body">
            <label for="deadline">Deadline</label>
            <input type="datetime-local" id="startdateDeadline">
            <div class="sd">
                <span>s.d.</span>
            </div>
            <input type="datetime-local" id="enddateDeadline">
        </div>
        <div class="complete-body">
            <label for="complete">Complete</label>
            <select id="completeTodo">
                <option value="">-select complete-</option>
                <option value="true">Done</option>
                <option value="false">Not yet</option>
            </select>
        </div>
        <div class="body-footer">
            <div class="sort-body" id="changeSort">
                <button class="btn btn-success" onclick="sortAsc('deadline')"><i class="fa-solid fa-sort"></i> sort by
                    deadline</button>
            </div>
            <div class="body-footerBtn">
                <button class="btn btn-warning" onclick="resetData()"><i class="fa-solid fa-rotate"></i></button>
                <button class="btn btn-info" onclick="browseData()"><i class="fa fa-search"></i></button>
            </div>
        </div>
    </div>
    <div class="footer">
        <input type="text" id="title" name="title" placeholder="title">
        <button class="btn btn-primary" onclick="addData()"><i class="fa-sharp fa-solid fa-circle-down"></i></button>
    </div>
    <div>
        <div class="showTodos">

        </div>
    </div>


    <!-- CREATE MODALS add,edit,delete-->

    <div class="modal fade" id="edit" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content" id="coba">
                <div class="modal-header">
                    <h5 class="modal-title">Update Todos</h5>
                    <button type="button" class="btn btn-close" data-bs-dismiss="modal" arial-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="form-user">

                    </form>
                </div>
            </div>
        </div>
    </div>


</body>

</html>